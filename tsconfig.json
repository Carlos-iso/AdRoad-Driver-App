{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "allowImportingTsExtencion": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5"
  },
  "include": [
    "**/*",
    "declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "Old",
    "**/*.spec.ts"
  ]
}